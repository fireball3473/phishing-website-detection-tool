{
  "manifest_version": 3,
  "name": "Phishing Detection Tool",
  "version": "1.0",
  "description": "Machine learning-based phishing detection.",
  "permissions": [
    "activeTab", 
    "scripting", 
    "tabs", 
    "notifications",
    "storage" 
  ],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}